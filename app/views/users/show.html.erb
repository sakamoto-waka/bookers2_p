<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
        
    <%= render :partial => 'user_info', :locals => {:user => @user, :book => @book} %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-inverse table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <th scope="row"><%= image_tag @user.get_image(100, 100) %></th>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>  
</div>    