<div class="container px-5 px-sm-0">
  <div class="error_explanation">
    <% if @book.errors.any? %>
      <h3 class="error title"><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    
    <%= render :partial => 'users/user_info', :locals => { :user => current_user, :book => Book.new } %>

    <div class="col-md-8 offset-md-1">
      <h2>User info</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
            <% end %>

      </table>
    </div>
  </div>
</div>