    <div class="col-md-3" >
      <h2>User info</h2>
      <!--あとでimage画像をいれます-->
      <table class="table">
        
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>  
        </tbody>
      </table>
      <div class="row">
        <!--＊＊＊リンク作変更　user editへ＊＊＊-->
          <%= link_to users_path, class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>  
      </div>
  
      <h2 class="mt-3">New book</h2>
      <!--book投稿フォーム（book index左側）-->
      <%= form_with model:@book do |f| %>
        <div class="mb-3">
            <%= f.label :title, 'Title' %>
            <%= f.text_field :title, class:"form-control" %>
        </div>    
        <div class="mb-3">  
            <%= f.label :body, 'Opinion' %>
            <%= f.text_area :body, class:"form-control" %>
        </div>  
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          <% end %>
    </div>