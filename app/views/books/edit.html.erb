<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title, autofocus: true %>
  <%= f.label 'Opinion', :body %>
  <%= f.text_area :body, autofocus: true %>
  <%= f.submit 'Update Book' %>
<% end %>  

<span><%= link_to 'Show', book_path(@book) %></span>
<span> | </span>
<span><%= link_to 'Back', books_path %></span>