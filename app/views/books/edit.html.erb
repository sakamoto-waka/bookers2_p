<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <div id="error_explanation">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>  
          </ul> 
        <% end %>
      </div>  

      <%= form_with model:@book, url:book_path(@book), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, 'Opinion' %>
          <%= f.text_area :body, autofocus: true, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <span><%= link_to 'Show', book_path(@book) %></span>
      <span> | </span>
      <span><%= link_to 'Back', books_path %></span>
    </div>
  </div>
</div>
