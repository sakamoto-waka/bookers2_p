<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3" >
      <h2>User info</h2>
      <!--imageはいります-->
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>user idはいります</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>introductionはいります</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <!--＊＊＊リンク作変更　user editへ＊＊＊-->
          <%= link_to users_path, class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <!--book投稿フォーム（book index左側）-->
      <%= form_with model:@book do |f| %>
        <div class="mb-3">
            <%= f.label :title, 'Title' %>
            <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :body, 'Opinion' %>
            <%= f.text_area :body, class:"form-control" %>
        </div>
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <th>user show</th>
                <td>
                  <%= link_to book.title, book_path(book.id) %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>