<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>User info</h1>
        
  
      <h1>New book</h1>
      <!--book投稿フォーム（book index左側）-->
      <%= form_with model:@book do |f| %>
        <div class="mb-3">
            <%= f.label :title, 'Title' %>
            <%= f.text_field :title %>
        </div>    
        <div class="mb-3">  
            <%= f.label :body, 'Opinion' %>
            <%= f.text_area :body %>
        </div>  
            <%= f.submit 'Create Book' %>
          <% end %>
      </div>
    <div class="col-lg-8">
      <h1>Books</h1>

      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>@twitter</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>  